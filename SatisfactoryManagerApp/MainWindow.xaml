<Window x:Class="SatisfactoryManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:nodify="https://miroiu.github.io/nodify"
        xmlns:vm="clr-namespace:SatisfactoryManagerApp.ViewModels"
        xmlns:conv="clr-namespace:SatisfactoryManagerApp.Converters"
        Title="Satisfactory Efficiency Manager"
        Height="800" Width="1400"
        Background="#12121F"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/NodeTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:FlowColorConverter  x:Key="FlowColorConverter"/>
            <conv:FlowToBoolConverter x:Key="FlowToBoolConverter"/>

            <!-- ── Button base ── -->
            <Style x:Key="ToolbarButton" TargetType="Button">
                <Setter Property="Background"      Value="#2A2A45"/>
                <Setter Property="Foreground"      Value="#E0E0E0"/>
                <Setter Property="BorderBrush"     Value="#3A3A5C"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding"         Value="12,5"/>
                <Setter Property="FontSize"        Value="12"/>
                <Setter Property="Cursor"          Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3A3A6C"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1A1A35"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
                <Setter Property="Background"  Value="#FF6A00"/>
                <Setter Property="BorderBrush" Value="#FF8C00"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FF8C00"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="BackButton" TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
                <Setter Property="Background" Value="#252540"/>
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Opacity" Value="0.3"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- ── Sidebar machine list item ── -->
            <Style x:Key="LibraryItemStyle" TargetType="ListBoxItem">
                <Setter Property="Background"    Value="Transparent"/>
                <Setter Property="Foreground"    Value="#D0D0E8"/>
                <Setter Property="Padding"       Value="10,6"/>
                <Setter Property="Cursor"        Value="Hand"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border x:Name="Bd"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="#2A2A45" BorderThickness="0,0,0,1"
                                    Padding="{TemplateBinding Padding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚙ " FontSize="11" Foreground="#FF6A00"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding MachineName}"
                                               FontSize="12" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#1E1E38"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#2A2A55"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Sidebar -->
            <ColumnDefinition Width="200"/>
            <!-- Canvas -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ═══════════════════════════ TOOLBAR ════════════════════════════ -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#1E1E2E" Padding="10,6">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚙ Satisfactory Manager"
                           Foreground="#FF6A00" FontSize="15" FontWeight="Bold"
                           VerticalAlignment="Center" Margin="0,0,24,0"/>
                <Button Content="＋ Máquina"  Command="{Binding AddMachineCommand}"
                        Style="{StaticResource ToolbarButton}" Margin="0,0,8,0"/>
                <Button Content="＋ Grupo"    Command="{Binding AddGroupCommand}"
                        Style="{StaticResource ToolbarButton}" Margin="0,0,8,0"/>
                <Button Content="⟳ Recalcular" Command="{Binding RecalculateCommand}"
                        Style="{StaticResource AccentButton}"/>
            </StackPanel>
        </Border>

        <!-- ══════════════════════════ BREADCRUMB ═══════════════════════════ -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#161625" Padding="10,4"
                BorderBrush="#2A2A45" BorderThickness="0,0,0,1">
            <DockPanel>
                <Button DockPanel.Dock="Right"
                        Content="◄ Volver"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource BackButton}"
                        Margin="8,0,0,0"/>
                <ItemsControl ItemsSource="{Binding BreadcrumbItems}" VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:BreadcrumbItem}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text=" › " Foreground="#555577" FontSize="12"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}"
                                                             Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Button Cursor="Hand" BorderThickness="0" Background="Transparent"
                                        Padding="2,0"
                                        Command="{Binding DataContext.GoToLevelCommand,
                                                  RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <TextBlock Text="{Binding Label}"
                                                       FontSize="12" VerticalAlignment="Center"
                                                       Cursor="Hand">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#9EB4FF"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Setter Property="TextDecorations" Value="Underline"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </Border>

        <!-- ══════════════════════════ SIDEBAR ═══════════════════════════════ -->
        <Border Grid.Row="2" Grid.Column="0"
                Background="#13131F"
                BorderBrush="#2A2A45" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- Header -->
                <Border DockPanel.Dock="Top" Background="#1A1A2E" Padding="10,8">
                    <TextBlock Text="📦 Máquinas" FontSize="13" FontWeight="SemiBold"
                               Foreground="#9EB4FF"/>
                </Border>

                <!-- Search box -->
                <Border DockPanel.Dock="Top" Padding="8,6"
                        BorderBrush="#2A2A45" BorderThickness="0,0,0,1">
                    <Border Background="#1E1E35" CornerRadius="4"
                            BorderBrush="#3A3A5C" BorderThickness="1">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" Text="🔍" FontSize="11"
                                       Foreground="#666688" Margin="6,0,4,0"
                                       VerticalAlignment="Center"/>
                            <TextBox x:Name="SearchBox"
                                     Text="{Binding Library.SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent" BorderThickness="0"
                                     Foreground="#D0D0E8" CaretBrush="#9EB4FF"
                                     FontSize="12" Padding="0,4"
                                     VerticalAlignment="Center"/>
                        </DockPanel>
                    </Border>
                </Border>

                <!-- Machine list (drag source) -->
                <ListBox x:Name="MachineList"
                         ItemsSource="{Binding Library.Filtered}"
                         ItemContainerStyle="{StaticResource LibraryItemStyle}"
                         Background="Transparent" BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         PreviewMouseLeftButtonDown="MachineList_PreviewMouseLeftButtonDown"
                         PreviewMouseMove="MachineList_PreviewMouseMove">
                    <ListBox.Template>
                        <ControlTemplate TargetType="ListBox">
                            <ScrollViewer Focusable="False" Padding="0">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </ControlTemplate>
                    </ListBox.Template>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- ═══════════════════════════ CANVAS ═══════════════════════════════ -->
        <nodify:NodifyEditor x:Name="Editor"
                             Grid.Row="2" Grid.Column="1"
                             ItemsSource="{Binding Nodes}"
                             Connections="{Binding Connections}"
                             Background="#0D0D1A"
                             GridCellSize="20"
                             ViewportLocation="{Binding ViewportLocation, Mode=TwoWay}"
                             ConnectionCompletedCommand="{Binding ConnectionCompletedCommand}"
                             RemoveConnectionCommand="{Binding RemoveConnectionCommand}"
                             AllowDrop="True"
                             Drop="Editor_Drop"
                             DragOver="Editor_DragOver">

            <!-- Node position + double-click to enter FactoryGroupNode -->
            <nodify:NodifyEditor.ItemContainerStyle>
                <Style TargetType="{x:Type nodify:ItemContainer}">
                    <Setter Property="Location" Value="{Binding Location, Mode=TwoWay}"/>
                    <EventSetter Event="MouseDoubleClick" Handler="ItemContainer_MouseDoubleClick"/>
                </Style>
            </nodify:NodifyEditor.ItemContainerStyle>

            <!-- Connection wire -->
            <nodify:NodifyEditor.ConnectionTemplate>
                <DataTemplate DataType="{x:Type vm:ConnectionViewModel}">
                    <nodify:Connection Source="{Binding Source.Anchor, Mode=OneWay}"
                                       Target="{Binding Target.Anchor, Mode=OneWay}"
                                       Stroke="{Binding UsageRatio, Converter={StaticResource FlowColorConverter}}"
                                       StrokeThickness="2">
                        <nodify:Connection.ToolTip>
                            <StackPanel>
                                <TextBlock Text="{Binding CapacityLabel}" FontWeight="Bold"/>
                                <TextBlock>
                                    <Run Text="Flujo: "/>
                                    <Run Text="{Binding ActualFlow, StringFormat={}{0:F1}}"/>
                                    <Run Text=" ítems/min"/>
                                </TextBlock>
                            </StackPanel>
                        </nodify:Connection.ToolTip>
                    </nodify:Connection>
                </DataTemplate>
            </nodify:NodifyEditor.ConnectionTemplate>
        </nodify:NodifyEditor>
    </Grid>
</Window>
